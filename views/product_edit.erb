<h1>Update information for <%=@product.name() %>.</h1>
<p>You can either update a single field or both.</p>

<form action="/products/<%=@product.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your product:</label>
  <input id="name" name="name" type="text">

  <label for="price">Put a new price on your item:</label>
  <input id="price" name="price" type="text">

  <button class='button btn-danger' type="submit">Update</button>
</form>
<br>
<br>
<form action="/products/<%= @product.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <div class="span7 text-centers">
    <button class= "button btn-danger" type="submit">Delete <%=@product.name() %> from Database</button>
  </div>
</form>
